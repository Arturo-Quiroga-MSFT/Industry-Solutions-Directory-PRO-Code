# SQL Server Connection Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# SQL Server Details
SQL_SERVER=your-server.database.windows.net
SQL_DATABASE=your-database-name
SQL_PORT=1433

# Authentication Method 1: SQL Server Authentication
SQL_USERNAME=your-username
SQL_PASSWORD=your-password

# Authentication Method 2: Azure AD (recommended)
# Set to 'true' to use Azure AD instead of SQL auth
USE_AZURE_AD_AUTH=false

# Azure AD details (if using Azure AD auth)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Connection Options
SQL_CONNECTION_TIMEOUT=30
SQL_ENCRYPT=yes
SQL_TRUST_SERVER_CERTIFICATE=no

# Azure AI Search (reuse from main config or set separately)
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_INDEX_NAME=partner-solutions-sql
AZURE_SEARCH_API_KEY=your-api-key

# Azure OpenAI (for embeddings)
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large
AZURE_OPENAI_API_KEY=your-api-key

# Logging
LOG_LEVEL=INFO
