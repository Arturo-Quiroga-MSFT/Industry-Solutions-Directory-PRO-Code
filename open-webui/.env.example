# Copy to .env and fill in values. (.env is gitignored)

# Open WebUI Configuration
WEBUI_NAME=ISD Solutions Chat
WEBUI_AUTH=false
ENABLE_SIGNUP=true

# Azure OpenAI Configuration
# Each entry in OPENAI_API_BASE_URLS maps to one deployment (it shows up as a selectable model).
# Separate multiple deployments with ';' and keep keys in the same order.
OPENAI_API_BASE_URLS=https://<resource>.openai.azure.com/openai/deployments/<deploymentName1>;https://<resource>.openai.azure.com/openai/deployments/<deploymentName2>
OPENAI_API_KEYS=<key1>;<key2>

AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_ENDPOINT=https://<resource>.openai.azure.com

# Enable OpenAI-compatible API
ENABLE_OPENAI_API=true

# MCP Server Configuration (optional)
ENABLE_MCP_SERVERS=true
# MCP_SERVERS='[{"name":"isd-server","command":"/path/to/python","args":["/path/to/mcp-isd-server/server.py"]}]'
